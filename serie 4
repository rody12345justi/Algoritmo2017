#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main ()
	{
	int s=0,n,i;
	do{
	cout<<"ingrese el valor"<<endl;
	cin>>n;
	}while(n<=0); 
	for (i=1;i<=n;i=i+4)
		
	s=s+i;
	
	cout<<"la sumatoria es"<<endl<<s;
	_getch();


}
