#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;
void cargar (int v[], int n);
bool verifprimo(int n);
void eliminaprimo(int v[], int &n);
void mostrar(int v[], int n);

void main(){
	int v[MAX], n;
	cout<<"-------Eliminar Primos del vector-------"<<endl;
	cout<<"Introduzca cantidad de elementos:"<<endl;
	cin>>n;
	cargar(v,n);
	eliminaprimo(v,n);
	mostrar(v,n);
	getch();
}

void cargar(int v[], int n){
	cout<<"Introduzca elementos del vector:"<<endl;
	for(int i=0; i<n; i++){
	cout<<"v["<<i<<"]=";
	cin>>v[i];
	}
}

bool verifprimo(int n){
	bool k=true;
	for (int i=2; i<n; i++){
		if (n%i==0)
			bool k=false;
		return (k);
	}
}

void eliminarprimo(int v[], int &n){
	int primo;
	for(int i=0; i<n; i++){
		if(verifprimo(v[i])==true)
			for(int j=i; j<n; j++){
				v[i]=v[j+1];}
			i--;
			n--;
}

}

void mostrar(int v[], int n){

	for(int i=0; i<n; i++){
		cout<<v[i]<<"\t";
	}

}
